### Key bindings
#
# Move around workspaces:
#
	# Move workspace to left/right output
	bindsym $mod+m move workspace to output right
	bindsym $mod+Shift+m move workspace to output left

	# Move workspace to up/down output
	bindsym $mod+n move workspace to output up
	bindsym $mod+Shift+n move workspace to output down

#
# Applications
#
	# Lock session
	bindsym $mod+Mod1+Control+l exec "swaylock --color 000000ff"

	# Player controls
	bindsym --locked XF86AudioPlay exec playerctl play-pause
	bindsym --locked XF86AudioNext exec playerctl next
	bindsym --locked XF86AudioPrev exec playerctl previous
